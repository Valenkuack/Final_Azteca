            <td>   </td>
            <td>   </td>
            <td>   </td>
            <td><td class="text-right"><h3>Total  <%= number_to_currency(total, :unit => "€")%></h3>
           </tr>
        
            
            
    </body>
</table>

<button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-shopping-cart"> <%= link_to 'Back to Menu', :controller => :menus %></span>
                </button></td>
                 
        
            <button type="button" class="btn btn-success">
                Checkout <span class="glyphicon glyphicon-play"></span>
            </button></td>   
</div>
</div>
</div>
        
          
    
        
   

