<div class= "jumbotronMenu">
<p id="notice"><%= notice %></p>
<br>
<h1 class= "center">Listing Menus</h1>

<br>

<table class= "table">
  <thead>
    <tr>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class= "center">
    <% @menus.each do |menu| %>
      <tr>
       
        <td><%= link_to menu.name, menu %></td>
        <% if user_signed_in?%>
          <%if current_user.admin==true%>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in?%>
   <%if current_user.admin==true%>
<%= link_to 'New Menu', new_menu_path %>
<% end %>
<%end%>